algoritmo "soma"
var
     n1, n2: inteiro
     soma: real
   Procedimento somaNumeros()
   Inicio
     Escreva("INFORME UM NÚMERO: ")
     Leia(n1)
     Escreva("INFORME OUTRO NÚMERO: ")
     Leia(n2)
     soma <- n1 + n2
     Escreva("SOMA DOS NÚMEROS: ", soma)
   FimProcedimento
inicio
    somaNumeros()
fimalgoritmo